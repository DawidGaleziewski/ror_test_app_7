<h2 align = 'center'>Title: <%= @post.title %> </h2>

<div class = 'well col-xs-8 col-xs-offset-2'>
  <h4 class = 'description'><strong>Description:</strong></h4>
  
  <%= simple_format(@post.description) %>
  
  <%= @post.author %>
  
  <div class = 'article-actions'>
    
    <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-xs btn-success' %>
    <%= link_to 'Delete', post_path(@post), method: :delete, class: 'btn btn-xs btn-danger' %>
    <%= link_to 'All articles', posts_path, class: 'btn btn-xs btn-primary' %>
    
  </div>
  
</div>
